{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "*": [
                "/server/types/*"
            ]
        },
        "outDir": "dist",
        "module": "commonjs",
        "target": "esnext",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "allowJs": true,
        "strict": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "lib": [
            "es2015",
            "es2016",
            "es2017",
            "es2018"
        ]
    },
    "include": [
        "./server"
    ],
    "exclude": [],
}